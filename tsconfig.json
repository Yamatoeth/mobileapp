{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "shared/**/*.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "backend"
  ]
}
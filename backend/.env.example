# Example environment variables for the backend (copy to `.env` and fill values)
# Rename this file to `.env` in development and production environments.

# App / runtime
APP_NAME=jarvis
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-secret

# Database (optional)
# Example: postgresql://user:password@localhost:5432/jarvis
DATABASE_URL=

# Redis (used for working memory, pub/sub, and optional Celery broker)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# OpenAI (embeddings & LLMs)
OPENAI_API_KEY=

# Pinecone (optional vector DB)
PINECONE_API_KEY=
PINECONE_ENV=
PINECONE_INDEX=

# Deepgram (STT) - optional
DEEPGRAM_API_KEY=

# ElevenLabs (TTS) - optional
ELEVENLABS_API_KEY=

# Logging / observability
SENTRY_DSN=

# CORS (comma-separated origins) - default is permissive for dev
ALLOW_ORIGINS="*"
# Database
DATABASE_URL=postgresql+asyncpg://jarvis:jarvis_dev@localhost:5432/jarvis_db
REDIS_URL=redis://localhost:6379

# APIs
OPENAI_API_KEY=sk-...
DEEPGRAM_API_KEY=...
ELEVENLABS_API_KEY=...
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-east-1-aws

# Security
SECRET_KEY=<generate with: openssl rand -hex 32>
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Monitoring
SENTRY_DSN=
